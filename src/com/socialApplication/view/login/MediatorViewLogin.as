package com.socialApplication.view.login{
	
	import com.razzmatazz.robotlegs.events.EventError;
	
	import org.robotlegs.starling.mvcs.Mediator;
	

	
	public class MediatorViewLogin extends Mediator{
		//--------------------------------------------------------------------------------------------------------- 
		// 
		//  PUBLIC & INTERNAL VARIABLES 
		// 
		//---------------------------------------------------------------------------------------------------------
	
		
		//--------------------------------------------------------------------------------------------------------- 
		//
		// PRIVATE & PROTECTED VARIABLES
		//
		//---------------------------------------------------------------------------------------------------------
		
		
		//--------------------------------------------------------------------------------------------------------- 
		//
		//  CONSTRUCTOR 
		// 
		//---------------------------------------------------------------------------------------------------------
		
		public function MediatorViewLogin()
		{
			super();
		}
		
		//--------------------------------------------------------------------------------------------------------- 
		// 
		//  PUBLIC & INTERNAL METHODS 
		// 
		//---------------------------------------------------------------------------------------------------------
		override public function onRegister():void {
			super.onRegister();
			addViewListener(EventViewLogin.LOGIN,_handlerLogin);
			addContextListener(EventError.ERROR,_handlerErrorLogin);
		}

		override public function onRemove():void {
			super.onRemove();		
			removeViewListener(EventViewLogin.LOGIN,_handlerLogin);
			removeContextListener(EventError.ERROR,_handlerErrorLogin);
		}	
		
		//--------------------------------------------------------------------------------------------------------- 
		// 
		//  GETTERS & SETTERS   
		// 
		//---------------------------------------------------------------------------------------------------------
		private function get _view():ViewLogin {
			return ViewLogin(viewComponent); 
		}
		//--------------------------------------------------------------------------------------------------------- 
		//
		// PRIVATE & PROTECTED METHODS 
		//
		//---------------------------------------------------------------------------------------------------------
		
		
		//--------------------------------------------------------------------------------------------------------- 
		// 
		//  EVENT HANDLERS  
		// 
		//---------------------------------------------------------------------------------------------------------
		private function _handlerLogin(event:EventViewLogin):void{
			dispatch(new EventViewLogin(EventViewLogin.LOGIN_DATA,event.payload));
		}
		private function _handlerErrorLogin(event:EventError):void{
			_view.errorMessegeAdd(event.message);
		}
		
		//--------------------------------------------------------------------------------------------------------- 
		// 
		//  HELPERS  
		// 
		//--------------------------------------------------------------------------------------------------------- 
		
		
		//--------------------------------------------------------------------------------------------------------- 
		// 
		//  END CLASS  
		// 
		//---------------------------------------------------------------------------------------------------------
		
		
		
	}
}